{
  "extends": ["biome:recommended"],
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": { "max": 10 },
      "no-unused-vars": "error",
      "no-console": "warn",
      "eqeqeq": "error",
      "curly": "error",
      "semi": ["error", "always"],
      "quotes": ["error", "double", { "avoidEscape": true }],
      "indent": ["error", 2]
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "quotes": "double",
    "semi": true
  }
}
